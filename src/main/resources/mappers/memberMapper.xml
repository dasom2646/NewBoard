<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.newboard.member.model.dao.MemberDao">
    <resultMap id="memberResultSet" type="MemberVo">
        <result property="memberSeq" column="MEMBER_SEQ"/>
        <result property="memberId" column="MEMBER_ID"/>
        <result property="memberName" column="MEMBER_NAME"/>
        <result property="memberPwd" column="MEMBER_PWD"/>
    </resultMap>

    <insert id="addMember" parameterType="MemberVo">
        INSERT INTO TB_MEMBER ( MEMBER_SEQ
                              , MEMBER_ID
                              , MEMBER_NAME
                              , MEMBER_PWD)
        VALUES (
                NEXTVAL('MEMBER_SEQ')
               , #{memberId}
               , #{memberName}
               , #{memberPwd})
    </insert>

    <select id="getMemberById" resultType="MemberVo">
        SELECT *
        FROM TB_MEMBER
        WHERE MEMBER_ID = #{memberId}
    </select>

</mapper>